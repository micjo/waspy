[Unit]
Description=Hive service mill layer - Runs rbs and erd experiments and exposes hardware controllers
After=wait_eth_up.service
Requires=wait_eth_up.service

[Service]
Type=simple
User=root
WorkingDirectory=/root/wasp-hive/projects/hive
ExecStart=/root/wasp-hive/projects/hive/run_hive.sh
Restart=on-failure
SyslogIdentifier=hive-service

[Install]
WantedBy=multi-user.target


